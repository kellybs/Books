@model AspNetCore.ViewModel.BookTypeUI
<a class="btn btn-success mt-5" style="margin:10px;" asp-controller="BookType" asp-action="Create">新增</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>编号</th>
            <th>分类名称</th>
            <th>父类名称</th>
            <th>管理</th>
        </tr>
    </thead>
    <tbody>
      
        @foreach (var item in Model.BookList)
        {
            <tr>
                <td>@item.BookTypeId</td>
                <td>@item.TypeName</td>
                <td>@item.ParentName</td>

                <td>
                    <a class="btn btn-info" asp-area="" asp-controller="BookType" asp-action="Update" asp-route-id="@item.BookTypeId">编辑</a>
                    <a class="btn btn-danger" asp-area="" asp-controller="BookType" asp-action="Delete" asp-route-id="@item.BookTypeId">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>