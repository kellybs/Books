
@model AspNetCore.ViewModel.BookTypeModel

<div class="row orderForm">
    <form asp-controller="BookType" asp-action="Create" method="post" class="form-horizontal" role="form" name="formSave" id="formSave">
        <h3 class="col-md-offset-2">新增分类</h3>
        <div class="form-group">
            <label  class="col-md-2 control-label">选择父类</label>
            <div class="col-md-4">
                @Html.DropDownListFor(t=>t.BookType.ParentId,
               new SelectList(Model.Parent.Select(x=>new { Value=x.BookTypeId,Text=x.TypeName  }), "Value", "Text"),
               "请选择",
               htmlAttributes: new { @class = "form-control border-input" })
            </div>
           
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">名称</label>
            <div class="col-md-6">
                <input asp-for="BookType.TypeName" class="form-control" placeholder="Enter book title" />
                <span asp-validation-for="BookType.TypeName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="返回" asp-action="Index" asp-controller="BookType" />
                <input class="btn btn-success" type="button" value="保存" onclick="bookModule.saveResult(this)" />
            </div>
        </div>
    </form>
</div>


