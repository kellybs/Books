@model AspNetCore.Entitys.PublishHouse
<div class="form-group">
    <label class="col-md-2 control-label">名称</label>
    <div class="col-md-6">
        <input asp-for="PublishName" class="form-control" placeholder="请输入名称" />
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label">推荐</label>
    <div class="col-md-6">
        <input asp-for="IsRecommend" />

        <span asp-validation-for="IsRecommend" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <div class="btn-group col-md-offset-2 col-md-6">
        <input class="btn btn-default" type="submit" value="返回" asp-action="Index" asp-controller="Publish" />
        <input class="btn btn-success" type="button" value="保存" onclick="bookModule.saveResult(this)" />
    </div>
</div>