@model List<AspNetCore.Entitys.PublishHouse>
<a class="btn btn-success mt-5" style="margin:10px;" asp-controller="Publish" asp-action="Create">新增</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>编号</th>
            <th>分类名称</th>
            <th>是否推荐</th>
            <th>管理</th>
        </tr>
    </thead>
    <tbody>
        @{

            if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PublishHouseID</td>
                        <td>@item.PublishName</td>
                        <td>@(item.IsRecommend?"是":"否")</td>

                        <td>
                            <a class="btn btn-info" asp-area="" asp-controller="Publish" asp-action="Edit" asp-route-id="@item.PublishHouseID">编辑</a>
                            
                            <a class="btn btn-danger" onclick="bookModule.deleteItem('/Publish/Delete','@item.PublishHouseID',this)" href="#">删除</a>
                        </td>
                    </tr>
                }
            }
        }

    </tbody>
</table>
