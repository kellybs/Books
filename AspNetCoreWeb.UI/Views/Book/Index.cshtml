@model AspNetCore.ViewModel.PageList<AspNetCore.ViewModel.BookQueryInfo>
<a class="btn btn-success mt-5" style="margin:10px;" asp-controller="Book" asp-action="Create">新增</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>书名</th>
            <th>作者</th>
         
            <th>管理</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookName</td>
                <td>@item.Author</td>

                <td>
                    <a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="Update" asp-route-id="@item.BookId">编辑</a>
                    <a class="btn btn-danger" asp-area="" asp-controller="Book" asp-action="Delete" asp-route-id="@item.BookId">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>


